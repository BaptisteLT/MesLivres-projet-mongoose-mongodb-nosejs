<%- include('../template/header.ejs') %>


<div class="container d-flex justify-content-center">

    <div class="card flex-md-row mb-4 box-shadow h-md-250 w-75">
        <div class="card-body d-flex flex-column align-items-start">
            <strong class="d-inline-block mb-2 text-primary"><%= book.auteur %></strong>
            <h3 class="mb-0">
            <h2 class="text-dark"><%= book.titre %></h2>
            </h3>
            <div class="mb-1 text-muted"><%= book.type %> de <%= book.nbPages %> pages</div>
            <p class="card-text mb-auto">Description: <%= book.description %></p>
            <a href="/delete-book/<%= book.id %>" class="card-link">Supprimer</a>
            <a href="/modify-book/<%= books[i].id %>" class="card-link">Modifier</a>
        </div>
    </div>
</div>




<%- include('../template/footer.ejs') %>